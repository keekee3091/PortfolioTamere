<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolioTamere</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioTamere.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    @await RenderSectionAsync("Styles", required: false)
    <style>
        .app-brand {
            text-decoration: none;
        }

        .brand-badge {
            width: 44px;
            height: 44px;
            display: grid;
            place-items: center;
            border-radius: 14px;
            font-weight: 800;
            letter-spacing: .5px;
            color: rgba(255,255,255,.95);
            background: rgba(255,255,255,.06);
            border: 1px solid rgba(255,255,255,.14);
            backdrop-filter: blur(10px);
            box-shadow: 0 10px 30px rgba(0,0,0,.28), 0 0 0 1px rgba(255,255,255,.05) inset;
        }

        .app-brand:hover .brand-badge {
            transform: translateY(-1px);
            box-shadow: 0 14px 36px rgba(0,0,0,.34), 0 0 0 1px rgba(255,255,255,.08) inset;
        }
    </style>
</head>

<body class="app @(ViewData["BodyClass"] ?? "")">
    <header class="app-header">
        <nav class="app-nav">
            <div class="app-nav__inner">
                <a class="app-brand" asp-area="" asp-page="/Index">
                    <span class="brand-badge">KG</span>
                </a>

                <button class="app-burger"
                        type="button"
                        data-bs-toggle="offcanvas"
                        data-bs-target="#mainMenu"
                        aria-controls="mainMenu"
                        aria-label="Open menu">
                    <span></span><span></span><span></span>
                </button>
            </div>
        </nav>

        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="mainMenu" aria-labelledby="mainMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="mainMenuLabel">Menu</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="nav flex-column gap-2">
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/Index">Accueil</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/Projects">Projets</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/Skills">Compétences</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/School">Parcours</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/AboutMe">About me</a></li>
                    <li class="nav-item"><a class="nav-link text-white" asp-area="" asp-page="/Contact">Contact</a></li>

                </ul>
            </div>
        </div>
    </header>

    <main role="main" class="app-main">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
