@section Styles
{
    <style>
      

        .skill-card {
            border-radius: 16px;
            transition: transform .18s ease, box-shadow .18s ease;
        }

            .skill-card:hover {
                transform: translateY(-4px);
                box-shadow: 0 14px 30px rgba(0,0,0,.10);
            }

        .skill-badge {
            width: 46px;
            height: 46px;
            border-radius: 999px;
            display: grid;
            place-items: center;
            background: rgba(37, 140, 251, 0.12);
            border: 1px solid rgba(37, 140, 251, 0.25);
        }

        .skill-badge-text {
            font-weight: 800;
            letter-spacing: 0.5px;
            color: #258cfb;
        }

        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 6px;
        }

        .skill-tag {
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 999px;
            border: 1px solid rgba(0,0,0,.12);
            background: rgba(0,0,0,.02);
            color: rgba(255,255,255,0.92)
        }

        .skill-level-pill {
            display: inline-block;
            margin-top: 6px;
            font-size: 12px;
            padding: 4px 10px;
            border-radius: 999px;
            border: 1px solid rgba(37, 140, 251, 0.25);
            background: rgba(37, 140, 251, 0.10);
            color: #258cfb;
            font-weight: 600;
        }

        .skill-meter {
            display: flex;
            gap: 7px;
            align-items: center;
            justify-content: flex-end;
        }

        .skill-dot {
            width: 10px;
            height: 10px;
            border-radius: 999px;
            border: 1px solid rgba(0,0,0,0.22);
            background: transparent;
            opacity: 0.9;
        }

            .skill-dot.is-on {
                background: #258cfb;
                border-color: #258cfb;
            }

        .skills-panel {
            padding: 18px;
            border-radius: 18px;
            background: rgba(255,255,255,.02);
            border: 1px solid rgba(255,255,255,.06);
        }

        .skills-panel-title {
            text-align: center;
            margin-bottom: 18px;
        }

        .skill-logo-wrap {
            width: 88px; 
            height: 88px;
            display: grid;
            place-items: center;
            background: transparent;
            border: none;
            box-shadow: none;
            padding: 0;
        }

        .skill-logo {
            width: 72px;
            height: 72px;
            object-fit: contain;
            display: block;
        }

        .skill-logo {
            width: 72px;
            height: 72px;
            object-fit: contain;
            display: block;
            filter: drop-shadow(0 8px 18px rgba(0,0,0,.35));
        }

        .col-skill {
            width: 33%;
        }
        .skill-logo-box {
            width: 84px;
            height: 84px;
            display: grid;
            place-items: center;
        }

        .skill-logo {
            width: 64px;
            height: 64px;
            object-fit: contain; 
            display: block;

        }

    </style>
}